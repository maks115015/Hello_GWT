<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'>

    <ui:with type="client.binders.MainViewResources" field="res"/>

        <gwt:HTMLPanel ui:field="mainPanel">


            <gwt:Label text="" ui:field="partOfDay" styleName="{res.style.messageLabels}"/>
            <gwt:Label text="" ui:field="userName" styleName="{res.style.messageLabels}"/>


            <gwt:Anchor ui:field="logout" text="Выйти из системы" href="/logout"
                        styleName="{res.style.logoutAnchor}"></gwt:Anchor>
        </gwt:HTMLPanel>
</ui:UiBinder>